<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">


      <dt>Username</dt>
      <dd><%= @user.username %></dd>


      <dt>Email</dt>
      <dd><%= @user.email %></dd>


      <dt>Joined</dt>
      <dd><%= @user.created_at %></dd>


      <dt>Last update</dt>
      <dd><%= @user.updated_at %></dd>

      <dt>Photos</dt>
      <% @user.photos.each do |photo| %>
      <dd><img src="<%= photo.image %>" ></dd>
      <dd><%= photo.caption %></dd>
      <% end %>


    </dl>


  </div>
</div>
